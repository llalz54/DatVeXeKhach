<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/tvMaChuyenXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="C"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoiDi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nơi đi"
        app:layout_constraintBottom_toTopOf="@+id/tvNoiDen"
        app:layout_constraintStart_toEndOf="@+id/tvMaChuyenXe"
        app:layout_constraintTop_toTopOf="@+id/tvMaChuyenXe" />

    <TextView
        android:id="@+id/tvNoiDen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nơi đến"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMaChuyenXe"
        app:layout_constraintStart_toEndOf="@+id/tvMaChuyenXe" />

    <TextView
        android:id="@+id/tvNgayDi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="16/06/2022"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvGiaChuyenXe"
        app:layout_constraintStart_toEndOf="@+id/tvNoiDen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGiaChuyenXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>